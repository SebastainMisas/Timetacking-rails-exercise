<%= form_for @project do |f| %>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
		<% @project.errors[:name].each do |err| %>
		<h1 class="err"><%= err %><h1>
		<% end %><br>

		<%= f.label :description %><br>
		<%= f.text_area :description %>
		<% @project.errors[:description].each do |err| %>
		<h1 class="err"><%= err %><h1>
		<% end %><br>

		<button type="submit">Save</button>
	
<% end %>